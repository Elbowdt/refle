import reflex as rx

# Paleta de colores
COLORS = {
    "primary": "#5E2AB7",
    "secondary": "#F5F3FF",
    "accent": "#FF7D33",
    "text": "#333333",
    "light": "#FFFFFF",
}

def navbar() -> rx.Component:
    return rx.box(
        rx.hstack(
            rx.heading("Riley", color=COLORS["primary"], size="lg"),
            rx.spacer(),
            rx.hstack(
                rx.link("Features & Pricing", href="#features", color=COLORS["text"]),
                rx.link("Blog", href="#blog", color=COLORS["text"]),
                rx.link("Support", href="#support", color=COLORS["text"]),
                spacing="2em",
            ),
            rx.spacer(),
            rx.button("Get started", bg=COLORS["primary"], color=COLORS["light"]),
            width="100%",
            padding="1em 2em",
        ),
        bg=COLORS["light"],
        position="sticky",
        top="0",
        z_index="1000",
        box_shadow="sm",
    )

def hero() -> rx.Component:
    return rx.center(
        rx.vstack(
            rx.heading(
                "Your smart parenting companion",
                size="2xl",
                text_align="center",
                color=COLORS["primary"],
            ),
            rx.text(
                "From newborn to toddler and beyond: Riley is the only AI-powered assistant that grows with your family.",
                text_align="center",
                font_size="1.2em",
            ),
            rx.button(
                "Get started",
                bg=COLORS["primary"],
                color=COLORS["light"],
                size="lg",
                margin_top="1em",
            ),
            rx.hstack(
                rx.text("Available on:"),
                rx.image(src="/appstore.png", height="2em"),
                rx.image(src="/playstore.png", height="2em"),
                spacing="1em",
                justify="center",
            ),
            spacing="1.5em",
            padding_y="4em",
        ),
        bg=COLORS["secondary"],
        width="100%",
    )

